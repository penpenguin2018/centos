#!/usr/bin/env python
#coding:utf8
import sys
import os

def addProject(name) :
	"""
	프로젝트를 생성하는 함수입니다.
	"""	
	root = "/project"
	subDirs = ["shot", 
	"in", 	
	"out", 
	"edit", 
	"asset",  
	"asset/char",
	"asset/shader",
	"config",
	"config/ocio",
	"config/thumbnail",
	"doc",
	"doc/concept"]

	for s in subDirs :
		p = "/".join([root,name,s])
		os.makedirs(p)

def existProject(name) :
	if os.path.exists("/project/%s" %(name)) :
		print ("경로가 이미 존재합니당")
		sys.exit()
	else :
		return True

def checkRoot():
	if not os.path.exists("/project") :
		print("project폴더가 존재하지 않습니다.")
		sys.exit()
	else :
		return True

def help():
	print "How to use:"
	print "$ addproject projectname"
	sys.exit()

if __name__ == "__main__" :
	if len(sys.argv) != 2 :
		help()
	if checkRoot() :
		name = sys.argv[1]
		if existProject(name) :
			addProject(name)
